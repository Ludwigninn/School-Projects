package p3;

import java.awt.Color;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class ClientGUIB {
	private JTextArea mainTextArea;
	private JTextArea OnlineList;
	private JTextField messageField;
	private JButton privateMessage;
	private JButton groupMessage;
	private JButton send;
	private JPanel mainPanel;

	public void ClientGUI() {
		drawGUI();

	}

	public void drawGUI() {
		mainPanel = new JPanel();
		
		// Vänstra sidan
		OnlineList = new JTextArea("Online");
		OnlineList.setEditable(false);

		// Vänster under Online listan
		privateMessage = new JButton("PM");
		groupMessage = new JButton("GM");

		// Rutan där texten ska skrivas in och kanppen ska ligga längst ner
		// brevid varandra
		send = new JButton("send");
		messageField = new JTextField("Write here");

		// Text rutan ska ligga längst upp mot höger ska utgöra mesta delen av
		// skärmen
		mainTextArea = new JTextArea("Välkommen");
		mainTextArea.setEditable(false);

		
		
		mainPanel.setLayout(null);
		mainPanel.setBackground(new Color(0, 0, 0));
		mainPanel.setBorder(BorderFactory.createLineBorder(Color.BLACK));

	}
}
